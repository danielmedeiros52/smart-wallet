{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },

  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": ["off", { "singleQuote": true }]
  },
  "overrides": [
    {
      "files": ["**/*.d.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
